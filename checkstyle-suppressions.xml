<!DOCTYPE suppressions PUBLIC
  "-//Checkstyle//DTD SuppressionFilter Configuration 1.2//EN"
  "https://checkstyle.org/dtds/suppressions_1_2.dtd">

<suppressions>

  <!-- TODO: Complete Javadocs -->
  <suppress checks="MissingJavadocMethod" />

  <!-- Two-digit type parameters for clarity -->
  <suppress
    checks="(ClassTypeParameterName|MethodTypeParameterName)"
    message="'(KW|VW)'"
  />

  <!-- Two-digit lambda parameters for clarity -->
  <suppress
    checks="AbbreviationAsWordInName"
    message="'oldVW'"
  />

  <!-- Will keep this old name pattern for compatibility -->
  <suppress
    checks="(MemberName|ParameterName)"
    message="'(eClass|wClass)'"
  />

  <!-- Will not reorder overloads -->
  <suppress
    checks="OverloadMethodsDeclarationOrder"
    files="[/\\]com[/\\]aoapps[/\\]collections[/\\]transformers[/\\]TransformMap\.java$"
  />

</suppressions>
